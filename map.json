{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Public Transport Accessibility – Australia (Melbourne hubs shown)",
    "subtitle": "Basemap: Natural Earth (Admin-0/1) • Projection: Equal Earth (fit to Australia) • Points: melb_stops.csv",
    "anchor": "start"
  },
  "width": 1100,
  "height": 600,
  "config": {
    "background": "white",
    "view": {"stroke": "transparent"},
    "legend": {"title": "Stops (count)"}
  },

  "projection": {
    "type": "equalEarth",
    "fit": {
      "url": "https://raw.githubusercontent.com/nvkelso/natural-earth-vector/master/geojson/ne_10m_admin_0_countries.geojson"
    }
  },

  "layer": [
    /* Graticule for context */
    {
      "data": {"graticule": {"step": [20, 20]}},
      "mark": {"type": "geoshape", "stroke": "#97a9bf", "strokeWidth": 1, "opacity": 0.6}
    },

    /* Admin-0: Australia fill */
    {
      "data": {
        "url": "https://raw.githubusercontent.com/nvkelso/natural-earth-vector/master/geojson/ne_10m_admin_0_countries.geojson",
        "format": {"type": "geojson"}
      },
      "transform": [{"filter": "datum.properties.adm0_a3 == 'AUS'"}],
      "mark": {"type": "geoshape", "fill": "#e9f0f7", "stroke": "#9fb0c3", "strokeWidth": 0.6}
    },

    /* Admin-1: state/province outlines */
    {
      "data": {
        "url": "https://raw.githubusercontent.com/nvkelso/natural-earth-vector/master/geojson/ne_10m_admin_1_states_provinces.geojson",
        "format": {"type": "geojson"}
      },
      "transform": [{"filter": "datum.properties.adm0_a3 == 'AUS'"}],
      "mark": {"type": "geoshape", "fill": null, "stroke": "white", "strokeWidth": 1.2}
    },

    /* Your hubs (Melbourne points) */
    {
      "data": {"url": "melb_stops.csv"},
      "mark": {"type": "circle", "opacity": 0.9, "stroke": "black", "strokeWidth": 0.25},
      "encoding": {
        "longitude": {"field": "lon", "type": "quantitative"},
        "latitude":  {"field": "lat", "type": "quantitative"},
        "size": {
          "field": "stops",
          "type": "quantitative",
          "scale": {"range": [30, 900]},
          "legend": {"orient": "right"}
        },
        "color": {
          "field": "stops",
          "type": "quantitative",
          "scale": {"scheme": "blues"}
        },
        "tooltip": [
          {"field": "place", "title": "Hub"},
          {"field": "stops", "type": "quantitative", "title": "Stops (count)"},
          {"field": "note",  "title": "Notes"}
        ]
      }
    }
  ]
}
