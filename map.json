{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Public Transport Accessibility in Melbourne",
    "subtitle": "Stops and Hubs â€¢ Data source: melb_stops.csv",
    "anchor": "start"
  },
  "width": 700,
  "height": 600,
  "projection": {
    "type": "mercator",
    "center": [145.0, -37.8],
    "scale": 40000
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/deldersveld/topojson/master/countries/australia/australia-states.json",
        "format": {"type": "topojson", "feature": "australia-states"}
      },
      "mark": {
        "type": "geoshape",
        "fill": "#e0e0e0",
        "stroke": "white"
      }
    },
    {
      "data": {"url": "melb_stops.csv"},
      "mark": {"type": "circle", "tooltip": true},
      "encoding": {
        "longitude": {"field": "stop_lon", "type": "quantitative"},
        "latitude": {"field": "stop_lat", "type": "quantitative"},
        "size": {
          "field": "hub_size",
          "type": "quantitative",
          "title": "Number of Routes"
        },
        "color": {
          "field": "mode",
          "type": "nominal",
          "title": "Transport Mode",
          "scale": {"scheme": "category10"}
        },
        "tooltip": [
          {"field": "stop_name", "title": "Stop"},
          {"field": "mode", "title": "Mode"},
          {"field": "hub_size", "title": "Routes"}
        ]
      }
    }
  ]
}
