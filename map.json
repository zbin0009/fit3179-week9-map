{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Public Transport Accessibility in Melbourne (Stops by Hub, 2025)",
    "subtitle": "Base map: Melbourne suburbs • Idiom: proportional symbol map • Projection: Mercator (auto-fit to suburbs)",
    "anchor": "start"
  },
  "config": {
    "background": "white",
    "view": {"stroke": "transparent"},
    "legend": {"title": "Stops (count)"}
  },
  "width": 960,
  "height": 600,
  "projection": {"type": "mercator"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/justinelliotmeyers/australian-geojson/master/vic_melbourne_municipalities.json",
        "format": {"type": "geojson"}
      },
      "mark": {
        "type": "geoshape",
        "fill": "#f0f4f8",
        "stroke": "#999",
        "strokeWidth": 0.5
      },
      "encoding": {
        "shape": {"field": "geometry", "type": "geojson"}
      }
    },
    {
      "data": {"url": "melb_stops.csv"},
      "mark": {
        "type": "circle",
        "opacity": 0.85,
        "stroke": "black",
        "strokeWidth": 0.2
      },
      "encoding": {
        "longitude": {"field": "lon", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"},
        "size": {
          "field": "stops",
          "type": "quantitative",
          "scale": {"range": [30, 1200]},
          "legend": {"orient": "right"}
        },
        "color": {
          "field": "stops",
          "type": "quantitative",
          "scale": {"scheme": "blues"}
        },
        "tooltip": [
          {"field": "place", "type": "nominal", "title": "Location"},
          {"field": "stops", "type": "quantitative", "title": "Stops (count)"},
          {"field": "note", "type": "nominal", "title": "Notes"}
        ]
      }
    }
  ]
}
