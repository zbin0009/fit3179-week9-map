{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1100,
  "height": 520,
  "config": {
    "background": "white",
    "view": { "stroke": "transparent" },
    "legend": { "titleColor": "#0f172a", "labelColor": "#0f172a" }
  },

  "projection": { "type": "equalEarth" },

  "layer": [
    {
      "data": { "graticule": { "step": [20, 20] } },
      "mark": { "type": "geoshape", "stroke": "#6b84a3", "strokeWidth": 1, "opacity": 0.6 }
    },

    {
      "data": {
        "url": "https://raw.githubusercontent.com/tonywr71/GeoJson-Data/master/australia-states.geojson",
        "format": { "type": "geojson" }
      },
      "transform": [
        { "calculate": "datum.STATE_NAME || datum.name || datum.STATE || datum.ste_name", "as": "stateName" },
        {
          "lookup": "stateName",
          "from": {
            "data": {
              "values": [
                { "state": "New South Wales", "pt_share": 0.156 },
                { "state": "Victoria", "pt_share": 0.174 },
                { "state": "Queensland", "pt_share": 0.089 },
                { "state": "South Australia", "pt_share": 0.102 },
                { "state": "Western Australia", "pt_share": 0.112 },
                { "state": "Tasmania", "pt_share": 0.060 },
                { "state": "Northern Territory", "pt_share": 0.040 },
                { "state": "Australian Capital Territory", "pt_share": 0.201 }
              ]
            },
            "key": "state",
            "fields": ["pt_share"]
          }
        }
      ],
      "mark": { "type": "geoshape", "stroke": "white", "strokeWidth": 1.2 },
      "encoding": {
        "color": {
          "field": "pt_share",
          "type": "quantitative",
          "title": "Share of commuters using PT",
          "scale": { "scheme": "blues", "domain": [0.03, 0.22] }
        },
        "tooltip": [
          { "field": "stateName", "title": "State/Territory" },
          { "field": "pt_share", "title": "PT share", "type": "quantitative", "format": ".1%" }
        ]
      }
    }
  ]
}
