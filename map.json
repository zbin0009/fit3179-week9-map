{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Public Transport Accessibility in Melbourne (Stops by Hub)",
    "subtitle": "Base map: Melbourne suburbs (polygons) • Idiom: proportional symbols • Projection: Mercator (auto-fit to suburbs)",
    "anchor": "start"
  },
  "width": 980,
  "height": 600,
  "config": {
    "background": "white",
    "view": { "stroke": "transparent" },
    "legend": { "title": "Stops (count)" }
  },

  /* Fit to a multi-polygon suburbs GeoJSON so you see regional boundaries */
  "projection": {
    "type": "mercator",
    "fit": {
      "url": "https://raw.githubusercontent.com/codeforamerica/click_that_hood/master/public/data/melbourne.geojson"
    }
  },

  "layer": [
    /* 1) Suburb polygons (the “regions”) */
    {
      "data": {
        "url": "https://raw.githubusercontent.com/codeforamerica/click_that_hood/master/public/data/melbourne.geojson",
        "format": { "type": "geojson" }
      },
      "mark": {
        "type": "geoshape",
        "fill": "#f3f6fa",
        "stroke": "#94a3b8",
        "strokeWidth": 0.8
      },
      "encoding": {
        "tooltip": [
          { "field": "properties.name", "type": "nominal", "title": "Suburb" }
        ]
      }
    },

    /* 2) Your hubs (bubbles) */
    {
      "data": { "url": "melb_stops.csv" },
      "mark": { "type": "circle", "opacity": 0.9, "stroke": "black", "strokeWidth": 0.25 },
      "encoding": {
        "longitude": { "field": "lon", "type": "quantitative" },
        "latitude":  { "field": "lat", "type": "quantitative" },
        "size": {
          "field": "stops",
          "type": "quantitative",
          "scale": { "range": [40, 1600] },
          "legend": { "orient": "right" }
        },
        "color": {
          "field": "stops",
          "type": "quantitative",
          "scale": { "scheme": "blues" }
        },
        "tooltip": [
          { "field": "place", "type": "nominal", "title": "Hub" },
          { "field": "stops", "type": "quantitative", "title": "Stops (count)" },
          { "field": "note",  "type": "nominal", "title": "Notes" }
        ]
      }
    },

    /* 3) Labels for the larger hubs */
    {
      "data": { "url": "melb_stops.csv" },
      "transform": [{ "filter": "toNumber(datum.stops) >= 140" }],
      "mark": { "type": "text", "dy": -10, "fontSize": 12, "fontWeight": "bold" },
      "encoding": {
        "longitude": { "field": "lon", "type": "quantitative" },
        "latitude":  { "field": "lat", "type": "quantitative" },
        "text": { "field": "place" },
        "color": { "value": "#334155" }
      }
    }
  ]
}
