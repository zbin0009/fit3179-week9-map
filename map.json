{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Public Transport Accessibility in Melbourne (Stops by Hub)",
    "subtitle": "Base map: Melbourne suburbs • Idiom: proportional symbols • Projection: Mercator (centered + scaled)",
    "anchor": "start"
  },
  "width": 980,
  "height": 600,
  "config": {
    "background": "white",
    "view": { "stroke": "transparent" },
    "legend": { "title": "Stops (count)" }
  },

  "projection": {
    "type": "mercator",
    "center": [144.9631, -37.8136],         // Melbourne CBD
    "scale": 60000                           // zoom level; tweak 55k–70k if needed
  },

  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/codeforamerica/click_that_hood/master/public/data/melbourne.geojson",
        "format": { "type": "geojson" }
      },
      "mark": {
        "type": "geoshape",
        "fill": "#f3f6fa",
        "stroke": "#94a3b8",
        "strokeWidth": 0.8
      }
    },

    {
      "data": { "url": "melb_stops.csv" },
      "mark": { "type": "circle", "opacity": 0.9, "stroke": "black", "strokeWidth": 0.25 },
      "encoding": {
        "longitude": { "field": "lon", "type": "quantitative" },
        "latitude":  { "field": "lat", "type": "quantitative" },
        "size": {
          "field": "stops",
          "type": "quantitative",
          "scale": { "range": [40, 1600] },
          "legend": { "orient": "right" }
        },
        "color": {
          "field": "stops",
          "type": "quantitative",
          "scale": { "scheme": "blues" }
        },
        "tooltip": [
          { "field": "place", "type": "nominal", "title": "Hub" },
          { "field": "stops", "type": "quantitative", "title": "Stops (count)" },
          { "field": "note",  "type": "nominal", "title": "Notes" }
        ]
      }
    },

