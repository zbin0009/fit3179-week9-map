{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Public Transport Accessibility in Melbourne (Stops by Hub)",
    "subtitle": "Base map: Natural Earth Admin-1 (Victoria) • Idiom: proportional symbols • Projection: Mercator (auto-fit)",
    "anchor": "start"
  },
  "width": 980,
  "height": 600,
  "config": {
    "background": "white",
    "view": { "stroke": "transparent" },
    "legend": { "title": "Stops (count)" }
  },

  /* With no center/scale provided, Vega-Lite will auto-fit the first geoshape layer. */
  "projection": { "type": "mercator" },

  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/nvkelso/natural-earth-vector/master/geojson/ne_10m_admin_1_states_provinces.geojson",
        "format": { "type": "geojson" }
      },
      "transform": [
        {
          "filter": "datum.properties.adm0_a3 == 'AUS' && (datum.properties.name == 'Victoria' || datum.properties.name_en == 'Victoria')"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "#f3f6fa",
        "stroke": "#94a3b8",
        "strokeWidth": 0.9
      }
    },

    {
      "data": { "url": "melb_stops.csv" },
      "mark": { "type": "circle", "opacity": 0.9, "stroke": "black", "strokeWidth": 0.25 },
      "encoding": {
        "longitude": { "field": "lon", "type": "quantitative" },
        "latitude":  { "field": "lat", "type": "quantitative" },
        "size": {
          "field": "stops",
          "type": "quantitative",
          "scale": { "range": [40, 1600] },
          "legend": { "orient": "right" }
        },
        "color": {
          "field": "stops",
          "type": "quantitative",
          "scale": { "scheme": "blues" }
        },
        "tooltip": [
          { "field": "place", "type": "nominal", "title": "Hub" },
          { "field": "stops", "type": "quantitative", "title": "Stops (count)" },
          { "field": "note",  "type": "nominal", "title": "Notes" }
        ]
      }
    },

    {
      "data": { "url": "melb_stops.csv" },
      "transform": [{ "filter": "toNumber(datum.stops) >= 140" }],
      "mark": { "type": "text", "dy": -10, "fontSize": 12, "fontWeight": "bold" },
      "encoding": {
        "longitude": { "field": "lon", "type": "quantitative" },
        "latitude":  { "field": "lat", "type": "quantitative" },
        "text": { "field": "place" },
        "color": { "value": "#334155" }
      }
    }
  ]
}
